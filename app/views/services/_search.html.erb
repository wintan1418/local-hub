<div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded shadow">
  <h1 class="text-3xl font-bold mb-6">Find Local Services</h1>
  <%= form_with url: services_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4 mb-8" do |f| %>
    <%= f.text_field :query, value: @query, placeholder: "Search by keyword...", class: "flex-1 px-4 py-2 border rounded focus:ring focus:ring-indigo-200" %>
    <%= f.select :category_id, options_for_select([[ 'All Categories', '' ]] + @categories.map { |c| [c.name, c.id] }, @category_id), {}, class: "px-4 py-2 border rounded focus:ring focus:ring-indigo-200" %>
    <%= f.submit "Search", class: "px-6 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
  <% end %>

  <% if @services.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render partial: 'services/service_card', collection: @services, as: :service %>
    </div>
  <% else %>
    <div class="text-gray-500 text-center py-12">No services found. Try adjusting your search.</div>
  <% end %>
</div> 