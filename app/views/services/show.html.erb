<div class="max-w-2xl mx-auto mt-10 p-8 bg-white rounded shadow">
  <h1 class="text-3xl font-bold mb-4"><%= @service.title %></h1>
  <div class="mb-2 text-gray-600">
    <span class="font-medium">Category:</span> <%= @service.category.name %>
    &nbsp;|&nbsp;
    <span class="font-medium">Provider:</span> <%= @service.provider.email %>
  </div>
  <div class="mb-4 text-lg text-gray-800">
    <%= @service.description %>
  </div>
  <div class="mb-4">
    <span class="text-xl font-bold text-indigo-700"><%= @service.price_type.titleize %>: $<%= number_to_currency(@service.base_price, precision: 2) %></span>
  </div>

  <% if user_signed_in? && current_user.customer? %>
    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        Book This Service
      </h2>
      <%= form_with model: [@service, Booking.new], url: service_bookings_path(@service), local: true, class: "space-y-4" do |f| %>
        <% if flash[:alert] %>
          <div class="bg-red-100 border border-red-300 text-red-700 rounded p-3 mb-2"><%= flash[:alert] %></div>
        <% end %>
        <div>
          <%= f.label :scheduled_at, 'Select Date & Time', class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :scheduled_at, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50", required: true, data: { controller: "booking-calendar" } %>
        </div>
        <div>
          <%= f.label :total_price, 'Total Price', class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :total_price, value: @service.base_price, min: 0, step: 1, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50", required: true %>
        </div>
        <div>
          <%= f.submit 'Book Now', class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition font-semibold" %>
        </div>
      <% end %>
    </div>
  <% elsif !user_signed_in? %>
    <div class="mt-8">
      <%= link_to 'Sign in to book this service', new_user_session_path, class: "text-indigo-600 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to 'Back to Services', services_path, class: "text-indigo-600 hover:underline" %>
  </div>
</div> 