<div class="bg-gradient-to-b from-indigo-50 to-white min-h-screen pb-20">
  <div class="max-w-5xl mx-auto pt-12 px-4 sm:px-6 lg:px-8">
    <!-- Welcome Card -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-10 flex flex-col md:flex-row items-center gap-6 animate-fade-in">
      <div class="flex-shrink-0">
        <svg class="w-16 h-16 text-indigo-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2"/></svg>
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-2">Welcome back, <span class="text-indigo-600"><%= current_user.email.split('@').first.titleize %></span>!</h1>
        <p class="text-gray-600 text-lg">Your personalized dashboard for finding and managing local services.</p>
      </div>
    </div>

    <!-- Service Search Card -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-10 animate-fade-in">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-semibold flex items-center gap-2">
          <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z"/></svg>
          Find Local Services
        </h2>
        <%= link_to 'Explore All', services_path, class: "inline-block px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition" %>
      </div>
      <%= render partial: 'services/search', formats: [:html] %>
    </div>

    <!-- Upcoming Bookings Card -->
    <div class="bg-white rounded-2xl shadow-lg p-8 animate-fade-in">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        <h2 class="text-xl font-semibold">Upcoming Bookings</h2>
      </div>
      <% if @upcoming_bookings.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <%= render partial: 'customer/dashboard/booking_card', collection: @upcoming_bookings, as: :booking %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-8">
          <svg class="w-20 h-20 text-gray-200 mb-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          <p class="text-gray-500 text-lg">You have no upcoming bookings yet.</p>
          <%= link_to 'Book a Service', services_path, class: "mt-4 px-6 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: none; }
}
.animate-fade-in {
  animation: fade-in 0.7s cubic-bezier(0.4, 0, 0.2, 1);
}
</style> 