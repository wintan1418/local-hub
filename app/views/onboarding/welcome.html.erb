<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Welcome to LocalServiceHub!
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Let's complete your profile to get started
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(model: @user, url: onboarding_update_profile_path, method: :patch, local: true) do |form| %>
        <% if @user.errors.any? %>
          <div class="mb-4 bg-red-50 border border-red-200 rounded-md p-4">
            <h4 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h4>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Profile Picture -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Profile Picture (Optional)</label>
          <div class="flex items-center">
            <div class="h-16 w-16 rounded-full bg-gray-200 flex items-center justify-center mr-4">
              <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= form.file_field :profile_picture, class: "text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          </div>
        </div>

        <!-- Basic Information -->
        <div class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :first_name, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>

            <div>
              <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :last_name, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :phone, required: true, placeholder: "1234567890", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">10-15 digits only</p>
          </div>

          <% if @user.provider? %>
            <div class="border-t pt-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">Business Information</h3>
              
              <div class="space-y-6">
                <div>
                  <%= form.label :business_name, class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :business_name, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>

                <div>
                  <%= form.label :bio, "Tell us about your services", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_area :bio, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>

                <div>
                  <%= form.label :address, "Business Address", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :address, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                  <div>
                    <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :city, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= form.label :state, class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :state, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= form.label :zip_code, "ZIP Code", class: "block text-sm font-medium text-gray-700" %>
                    <%= form.text_field :zip_code, required: true, placeholder: "12345", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-8">
          <%= form.submit "Complete Profile", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>